<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:background="@drawable/drawer_border"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:orientation="vertical"
    android:gravity="bottom"
    android:padding="16dp"
    android:background="@drawable/header_bbkg"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact@canwe.com"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/home"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="HOME"
        android:textSize="16sp"
        android:drawableLeft="@drawable/baseline_home_24"
        android:drawablePadding="8dp"/>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/chat"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="CHAT"
        android:textSize="16sp"
        android:drawableLeft="@drawable/baseline_chat_24"
        android:drawablePadding="8dp"/>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/homemade"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="HOMEMADE"
        android:textSize="16sp"
        android:drawableLeft="@drawable/baseline_food_bank_24"
        android:drawablePadding="8dp"/>
</LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/resturant"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="RESTURANT"
        android:textSize="16sp"
        android:drawableLeft="@drawable/baseline_fastfood_24"
        android:drawablePadding="8dp"/>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/payment"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="PAYMENT"
        android:textSize="16sp"
        android:drawableLeft="@drawable/baseline_payments_24"
        android:drawablePadding="8dp"/>
</LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/location"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="LOCATION"
        android:textSize="16sp"
        android:drawableLeft="@drawable/baseline_location_on_24"
        android:drawablePadding="8dp"/>
</LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="12dp"
    android:background="@color/gray"/>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/logout"
    android:layout_marginStart="12dp"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="LOGOUT"
        android:textSize="16sp"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:drawablePadding="8dp"/>
</LinearLayout>


</LinearLayout>