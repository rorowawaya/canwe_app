<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pn"
    tools:context=".PaymentActivity">


    <Button
        android:id="@+id/subnBtn"
        android:layout_width="304dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/white"
        android:onClick="go"
        android:text="Submit"
        android:textColor="#000000"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795"
        tools:ignore="DuplicateSpeakableTextCheck,VisualLintButtonSize" />

    <EditText
        android:id="@+id/password"
        android:layout_width="298dp"
        android:layout_height="61dp"
        android:drawableStart="@drawable/baseline_extension_off_24"
        android:drawablePadding="4dp"
        android:hint="Expires"
        android:inputType="textPassword"
        android:padding="4dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465" />

    <EditText
        android:id="@+id/num"
        android:layout_width="288dp"
        android:layout_height="70dp"
        android:drawableStart="@drawable/baseline_format_list_numbered_rtl_24"
        android:drawablePadding="4dp"
        android:hint="Number"
        android:inputType="textPassword"
        android:padding="4dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.343" />

    <EditText
        android:id="@+id/cv"
        android:layout_width="286dp"
        android:layout_height="61dp"
        android:drawableStart="@drawable/baseline_add_card_24"
        android:drawablePadding="4dp"
        android:hint="CVV"
        android:inputType="textPassword"
        android:padding="4dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.585" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="287dp"
        android:layout_height="67dp"
        android:drawableStart="@drawable/baseline_add_card_24"
        android:drawablePadding="4dp"
        android:hint="Phone Number"
        android:inputType="textPassword"
        android:padding="4dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />
</androidx.constraintlayout.widget.ConstraintLayout>

